            <Label Background="CornflowerBlue" Height="35" Width="55" Canvas.Left="382" Canvas.Top="125" HorizontalContentAlignment="Stretch" Content="Wins X:" />
            <Label Background="Coral" Height="35" Width="55" Canvas.Left="382" Canvas.Top="165" HorizontalContentAlignment="Stretch" Content="Wins O:" />
            <Label Background="DarkGray" Height="40" Width="55" Canvas.Left="382" Canvas.Top="80" HorizontalContentAlignment="Stretch" Content="Winner:" />
        </Canvas>
    </Grid>
</Window>
